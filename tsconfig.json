{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceRoot": "/",
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noUnusedLocals": true
    },
    "include": ["src", "src/types"],
    "exclude": ["node_modules", "dist"]
}
