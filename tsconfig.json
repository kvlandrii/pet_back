{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noUnusedLocals": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
